<%= render "shared/errors", obj: @article %>

<div class="row" >
	<div class="col-xs-12" >

		<%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |form| %>
			<div class="form-group" align="center">
				<div class="control-label col-sm-2">
					<%=  form.label :title %>
				</div>
				<div class="col-sm-8">
					<%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
				</div>
			</div>
			<div class="form-group" align="center">
				<div class="control-label col-sm-2">
				<%=  form.label :description %>
				</div>
				<div class="col-sm-8">
					<%= form.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
				</div>
			</div>
		<div class="form-group" align="center">
			<div class="col-sm-10">
				<%= form.submit class: "btn btn-primary btn.lg" %>
			</div>
		</div>
		<% end %>
		<div class="col-xs-4" align="center">
		  [	<%= link_to "Cancel request and return to Articles list", articles_path %> ]
		</div>	
	</div>
</div>