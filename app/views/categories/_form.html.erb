<%= render "shared/errors", obj: @category %>

<%= form_for(@category, :html => { class: "form-horizontal", role: "form" }) do |form| %>
		<div class="form-group" align="center">
				<div class="control-label col-sm-2">
						<%=  form.label :name %>
				</div>
				<div class="col-sm-8">
						<%= form.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
				</div>
		</div>
<div class="form-group" align="center">
		<div class="col-sm-10">
				<%= form.submit class: "btn btn-primary btn.lg" %>
		</div>
</div>
<% end %>
<div class="col-xs-4" align="center">
		[	<%= link_to "Cancel request and return to Articles list", articles_path %> ]
</div>